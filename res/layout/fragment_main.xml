<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/title"
        android:contentDescription="Title"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How eroded is this crater?"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/image1"
            android:contentDescription="Image to evaluate"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click the best matching picture"
            android:gravity="center"
            />
    </LinearLayout>
    
    <TableLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableRow>
            <Button
                android:text="It's perfect!"
                android:drawableLeft="@drawable/crater_perfect"
                android:layout_gravity="center_vertical"
                android:layout_weight=".5"
                android:layout_width="0dp" 
                />
            <Button
                android:text="A little worn"
                android:drawableLeft="@drawable/crater_worn"
                android:layout_gravity="center_vertical" 
                android:layout_weight=".5" 
                android:layout_width="0dp" 
                />
        </TableRow>
        <TableRow>
            <Button
                android:text="Lot's of wear &amp; tear"
                android:drawableLeft="@drawable/crater_wear_tear"
                android:layout_gravity="center_vertical" 
                android:layout_weight=".5" 
                android:layout_width="0dp" 
                />
            <Button
                android:text="That's a crater?"
                android:drawableLeft="@drawable/crater_none"
                android:layout_gravity="center_vertical" 
                android:layout_weight=".5" 
                android:layout_width="0dp" 
                />
        </TableRow>
    </TableLayout>

</LinearLayout>